
@model compents.Models.News
@{
    ViewBag.Title = "Edit";
}

<div class="card" style="width:60%; margin:auto;">
    <div class="card-header bg-dark text-white">
        <h3>Edit Employee</h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.id)
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.title)
                        @Html.TextBoxFor(m => m.title, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.title)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.content)
                        @Html.TextBoxFor(m => m.content, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.content)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.photo)
                        @Html.TextBoxFor(m => m.photo, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.photo)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.publichdate)
                        @Html.TextBoxFor(m => m.publichdate, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.publichdate)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.sources)
                        @Html.TextBoxFor(m => m.sources, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.sources)
                    </div>
                </div>
                @*<div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Salary)
                        @Html.EditorFor(m => m.Salary, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.Salary)
                    </div>
                </div>*@
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        }
    </div>
</div>

